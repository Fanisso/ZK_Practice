<language-addon>
	<!-- addon name, should be unique -->
	<addon-name>gmapsextended</addon-name>
	<language-name>xul/html</language-name>
	
	<version>
		<version-class>gmapsextended.Version</version-class>
		<version-uid>0.0.1</version-uid>
		<zk-version>5.0.0</zk-version><!-- or later -->
	</version>

	<!-- define a component -->
	<component>
		<component-name>gdirection</component-name>
		<!-- fully-qualified java class name -->
		<component-class>gmapsextended.gmaps.Gdirection</component-class>
		<!-- widget class,
			when you say a widget class is gmapsextended.Gdirection
			it denotes there should have a file
			web/js/gmapsextended/Gdirection.js
			under classpath,
			and have "<package name="gmapsextended" ...>...</package>"
			in web/js/gmapsextended/zk.wpd
			and "gmapsextended.Gdirection = ..."
			in Gdirection.js to define that client widget -->
		<widget-class>gmapsextended.Gdirection</widget-class>
		<!-- default mold is required -->
		<mold>
			<mold-name>default</mold-name>
			<!-- relative path based on widget-class' path (web/js/gmapsextended/) -->
			<mold-uri>mold/gdirection.js</mold-uri>
			<css-uri>css/gdirection.css.dsp</css-uri>
		</mold>
	</component>
</language-addon>